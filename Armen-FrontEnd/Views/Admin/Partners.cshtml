@{
    ViewData["Title"] = "Partners";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/js/Admin/CSS/Partners.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Admin/js/Partners.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<!-- المحتوى الرئيسي -->
<div class="main-content" id="mainContent">
    <!-- شريط التنقل العلوي -->
    <div>
        <div class="d-flex justify-content-between align-items-center">
        </div>
    </div>
    <!-- شريط التنقل العلوي مع صورة الأدمن على اليسار -->
    <div class="topbar">

        <div class="container-fluid py-4">
            <!-- عنوان الصفحة وأزرار التحكم -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">إدارة الشركات المتعاونة</h2>
                        <button class="btn btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#addCompanyModal">
                            <i class="fas fa-plus me-2"></i>إضافة شركة جديدة
                        </button>
                    </div>
                </div>
            </div>

            <!-- جدول الشركات المتعاونة -->
            <div class="container my-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover text-center">
                                        <thead class="table-light">
                                            <tr>
                                                <th>اسم الشركة</th>
                                                <th>الشعار</th>
                                                <th>الوصف</th> <!-- نقلت الوصف هنا -->
                                                <th>الظهور بالرئيسية</th> <!-- نقلت هنا -->
                                                <th>البلد</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <!-- سيتم ملؤه ديناميكيًا بالجافا سكريبت -->
                                        </tbody>
                                    </table>
                                </div>

                                <!-- الترقيم الصفحي -->
                                <nav class="mt-4 px-4">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item disabled"><a class="page-link" href="#">السابق</a></li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">التالي</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- نافذة إضافة شركة -->
            <div class="modal fade" id="addCompanyModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">إضافة شركة جديدة</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="addCompanyForm">
                                <div class="mb-3">
                                    <label class="form-label">اسم الشركة <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="companyName" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">رابط الشعار (URL) <span class="text-danger">*</span></label>
                                    <input type="url" class="form-control" id="companyLogo" required placeholder="https://example.com/logo.png">
                                    <div class="mt-2">
                                        <img id="logoPreview" src="" alt="معاينة الشعار" style="max-height: 80px; display: none;">
                                    </div>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="showOnHomepage">
                                    <label class="form-check-label" for="showOnHomepage">عرض في الصفحة الرئيسية</label>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">الوصف</label>
                                    <textarea class="form-control" id="companyDescription" rows="3"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">البلد</label>
                                    <input type="text" class="form-control" id="companyCountry">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                            <button class="btn btn-primary" onclick="addCompany()">حفظ</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- نافذة تعديل شركة -->
            <div class="modal fade" id="editCompanyModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">تعديل بيانات الشركة</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editCompanyForm">
                                <input type="hidden" id="editCompanyId">
                                <div class="mb-3">
                                    <label class="form-label">اسم الشركة <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="editCompanyName" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">رابط الشعار (URL) <span class="text-danger">*</span></label>
                                    <input type="url" class="form-control" id="editCompanyLogo" required>
                                    <div class="mt-2">
                                        <img id="editLogoPreview" src="" alt="معاينة الشعار" style="max-height: 80px; display: none;">
                                    </div>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="editShowOnHomepage">
                                    <label class="form-check-label" for="editShowOnHomepage">عرض في الصفحة الرئيسية</label>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">الوصف</label>
                                    <textarea class="form-control" id="editCompanyDescription" rows="3"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">البلد</label>
                                    <input type="text" class="form-control" id="editCompanyCountry">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                            <button class="btn btn-primary" onclick="saveCompany()">حفظ التعديلات</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>