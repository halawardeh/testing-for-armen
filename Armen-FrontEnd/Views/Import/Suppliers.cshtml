<!-- Add/Edit Supplier Modal -->
<div id="supplierModal" class="fixed inset-0 bg-black bg-opacity-50 modal hidden flex items-center justify-center z-50">
    <div class="modal-content max-w-3xl w-full mx-4 p-8">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-primary-color" id="modalTitle">إضافة مورد جديد</h3>
            <button onclick="closeSupplierModal()" class="text-gray-500 hover:text-gray-700 text-2xl">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="supplierForm" onsubmit="saveSupplier(event)">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="form-label">اسم المورد *</label>
                    <input type="text" id="supplierName" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">اسم الشركة *</label>
                    <input type="text" id="companyName" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">البريد الإلكتروني *</label>
                    <input type="email" id="supplierEmail" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">رقم الهاتف *</label>
                    <input type="tel" id="supplierPhone" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">فئة المنتجات *</label>
                    <select id="productCategory" class="form-input" required>
                        <option value="">اختر الفئة</option>
                        <option value="electronics">إلكترونيات</option>
                        <option value="textiles">منسوجات</option>
                        <option value="machinery">آلات ومعدات</option>
                        <option value="food">مواد غذائية</option>
                        <option value="chemicals">مواد كيميائية</option>
                        <option value="automotive">قطع سيارات</option>
                    </select>
                </div>

                <div>
                    <label class="form-label">الموقع</label>
                    <input type="text" id="supplierLocation" class="form-input" placeholder="المدينة، البلد">
                </div>

                <div class="md:col-span-2">
                    <label class="form-label">وصف المنتجات</label>
                    <textarea id="productDescription" class="form-input" rows="3" placeholder="اكتب وصفاً مختصراً للمنتجات التي يوردها..."></textarea>
                </div>

                <div class="md:col-span-2">
                    <label class="form-label">العنوان</label>
                    <textarea id="supplierAddress" class="form-input" rows="2"></textarea>
                </div>

                <div class="md:col-span-2">
                    <label class="form-label">ملاحظات</label>
                    <textarea id="supplierNotes" class="form-input" rows="3"></textarea>
                </div>
            </div>

            <div class="flex space-x-4 mt-8">
                <button type="submit" class="action-btn btn-primary flex-1">
                    <i class="fas fa-save ml-2"></i>
                    <span id="saveButtonText">حفظ المورد</span>
                </button>
                <button type="button" class="action-btn btn-secondary flex-1" onclick="closeSupplierModal()">
                    إلغاء
                </button>
            </div>
        </form>
    </div>
</div>

