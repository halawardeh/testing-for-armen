<!-- Service Modal: Invitation Letter -->
<div class="service-modal" id="invitationModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h3 class="modal-title">طلب خطاب دعوة</h3>
            <button type="button" class="modal-close" data-modal-close>&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-info">
                <p>هذه الخدمة <strong>مجانية لعملائنا الحاليين</strong> في خدمات الشحن، وبتكلفة <strong>200 شيكل</strong> للعملاء الجدد.</p>
            </div>
            
            <form class="service-form" id="invitationForm">
                <div class="form-group">
                    <label class="form-label">هل أنت من عملائنا الحاليين؟</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="customer_type" value="existing">
                            نعم، أنا عميل حالي
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="customer_type" value="new" checked>
                            لا، أنا عميل جديد
                        </label>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">صورة جواز السفر (JPG, PNG, PDF)</label>
                    <input type="file" class="file-input" name="passport_copy" >
                </div>
                <div class="form-group">
                    <label class="form-label">الاسم الكامل</label>
                    <input type="text" class="form-control" name="full_name" placeholder="اكتب اسمك الكامل" required>
                </div>
                <div class="form-group">
                    <label class="form-label">الجنسية</label>
                    <input type="text" class="form-control" name="nationality" placeholder="مثال: أردني" >
                </div>
                
                <div class="form-group">
                    <label class="form-label">تاريخ الميلاد</label>
                    <input type="date" class="form-control" name="birthdate" >
                </div>

                <div class="form-group">
                    <label class="form-label">المهنة</label>
                    <select class="form-control" name="profession" id="professionSelect" >
                        <option value="">اختر المهنة</option>
                        <option value="wholesale">تاجر جملة</option>
                        <option value="chain_owner">صاحب سلسلة محلات</option>
                        <option value="other">أخرى</option>
                    </select>
                </div>

                <div class="form-group" id="otherProfessionGroup" style="display:none;">
                    <label class="form-label">يرجى تحديد المهنة</label>
                    <input type="text" class="form-control" name="other_profession" placeholder="اكتب مهنتك">
                </div>

                <div class="form-group">
                    <label class="form-label">تفاصيل الزيارة</label>
                    <textarea class="form-control" name="visit_details" rows="3" placeholder="اكتب تفاصيل زيارتك للصين" required></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label">نوع جواز السفر</label>
                    <select class="form-control" name="passport_type" required>
                        <option value="">اختر نوع الجواز</option>
                        <option value="normal">عادي</option>
                        <option value="special">خاص</option>
                        <option value="diplomatic">دبلوماسي</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">تاريخ الوصول المتوقع</label>
                    <input type="date" class="form-control" name="arrival_date" required>
                </div>
                
               

                <div class="price-section">
                    <p class="price-amount">المبلغ المطلوب: <span id="invitationPrice">200</span> شيكل</p>
                </div>
                
                <button type="submit" class="submit-btn">إرسال الطلب</button>

                <div class="text-center mt-3">
                    <a href="/Home/Services#visaModal" id="goToVisaModal" style="color:#007bff; text-decoration:underline; cursor:pointer;">تريد طلب تأشيرة دخول؟</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Visa Modal -->
<div class="service-modal" id="visaModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <h3 class="modal-title">طلب تأشيرة دخول</h3>
            <button type="button" class="modal-close" data-modal-close>&times;</button>
        </div>
        <div class="modal-body">
            <form class="service-form" id="visaForm">
                <div class="form-group">
                    <label class="form-label">صورة جواز السفر</label>
                    <input type="file" class="file-input" name="passport_copy" required>
                </div>
                <div class="form-group">
                    <label class="form-label">صورة شخصية</label>
                    <input type="file" class="file-input" name="personal_photo" required>
                </div>
                <div class="form-group">
                    <label class="form-label">الاسم الكامل</label>
                    <input type="text" class="form-control" name="full_name" placeholder="اكتب اسمك الكامل" required>
                </div>
                <div class="form-group">
                    <label class="form-label">الجنسية</label>
                    <input type="text" class="form-control" name="nationality" placeholder="مثال: أردني" required>
                </div>
                <div class="form-group">
                    <label class="form-label">تاريخ الميلاد</label>
                    <input type="date" class="form-control" name="birthdate" required>
                </div>
                <div class="form-group">
                    <label class="form-label">رقم الهاتف</label>
                    <input type="tel" class="form-control" name="phone" required>
                </div>
                <div class="form-group">
                    <label class="form-label">هل سبق أن حصلت على تأشيرة للصين؟</label>
