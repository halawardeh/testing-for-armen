                    <label class="form-label">هل ستنتقل بين مدن؟</label>
                    <input type="checkbox" name="has_route" id="hasRouteCheckbox">
                    <label for="hasRouteCheckbox">نعم، سأنتقل بين مدن</label>
                </div>
                <div class="form-group" id="routeGroup" style="display:none;">
                    <label class="form-label">اذكر المدن التي ستزورها بالترتيب</label>
                    <input type="text" class="form-control" name="route" placeholder="مثال: بكين - شنغهاي - قوانزو">
                </div>
                <div class="form-group" id="visaInvitationField" style="display: none;">
                    <label class="form-label">يرجى رفع خطاب الدعوة</label>
                    <input type="file" class="file-input">
                </div>
                <div class="price-section">
                    <p class="price-amount">المبلغ المطلوب: <span id="visaPrice">350</span> شيكل</p>
                </div>
                <button type="submit" class="submit-btn">إرسال الطلب</button>
            </form>
        </div>
    </div>
</div>

<!-- Translator Modal -->
